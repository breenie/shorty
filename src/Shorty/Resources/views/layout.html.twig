{% import 'macros.html.twig' as kurl %}
<!DOCTYPE html>
<html lang="en-gb" ng-app="ShortyService">
<head>
    <meta charset="utf-8">
    <title>{% block title %}Shorty - Yes, we need another URL shortener{% endblock %}</title>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/shorty.css" rel="stylesheet"/>
    {% block head %}{% endblock %}
    <link rel="shortcut icon" href="{{ app.request.basePath }}/favicon.ico"/>

    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular-resource.min.js"></script>
    <script src="/js/ui-bootstrap-0.12.1.min.js"></script>
</head>
<body{% block body_attributes %}{% endblock %} ng-controller="ShortyController">

{% block nav_content %}{% include 'menu.html.twig' %}{% endblock %}

{% block flash_messages %}
    <div class="container">
        {{ kurl.render_flashbags(app.session.flashbag.all) }}
    </div>
{% endblock %}

{% block body_content %}{% endblock %}

{% block footer_content %}
    <footer class="footer">
        <div class="container">
            {% include 'footer.html.twig' %}
        </div>
    </footer>
{% endblock %}

<script src="/js/services.js"></script>
<script src="/js/controllers.js"></script>

</body>
</html>

