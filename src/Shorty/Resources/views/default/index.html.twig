{% extends 'layout.html.twig' %}
{% import 'macros.html.twig' as kurl %}
{% block title %}Shorty{% endblock %}

{% block body_content %}
    <section>
        <div class="container text-center">
            <div class="row">

                <!-- Flash messages -->
                <div class="col-lg-12 text-left">
                    {{ kurl.render_flashbags(app.session.flashbag.all) }}
                </div>


                <div class="col-lg-12">
                    <div class="intro-text">
                        <h1 class="name">Shorten really long URLs</h1>

                        <p>Shorten massive long URLs in a similar fashion to the zillion other URL shortening services
                            out
                            there.</p>

                        <form role="form" method="post" action="/">
                            <div class="row">
                                <div class="col-lg-2"></div>
                                <div class="col-lg-8">
                                    <label class="sr-only" for="url">Url</label>

                                    <div class="input-group">
                                        {{ form_widget(form.short_url, {attr: {class: "form-control input-lg", placeholder: 'Enter really long URL'|trans, autocomplete: "off" }}) }}
                                        <span class="input-group-btn">
                                            <button class="btn btn-primary btn-lg" type="submit">Shorten</button>
                                        </span>
                                    </div>
                                    {{ form_rest(form) }}
                                </div>
                                <div class="col-lg-2"></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}


