{% extends 'layout.html.twig' %}
{% block title %}Shorty{% endblock %}

{% block header_content %}
    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-text">
                        <span class="name">Shorten really long URLs</span>
                        <hr class="star-light">

                        <form class="form-inline" role="form">
                            <div class="form-group col-mid-6">
                                <label class="sr-only" for="url">Url</label>
                                <input name="url" type="text" class="form-control input-lg" placeholder="Enter really long URL">
                            </div>

                            <div class="form-group col-mid-2">
                                <button type="submit" class="btn btn-primary btn-lg">Shorten</button>
                            </div>
                        </form>

                        <!--
                        <p class="help-block text-danger"></p>
                        <div id="success"></div>
                        -->
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block body_content %}
    {% include 'default/about.html.twig' %}
{% endblock %}


