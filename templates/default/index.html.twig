{% extends 'layout.html.twig' %}
{% block title %}Shorty{% endblock %}

{% block header_content %}
    <header>
        <div class="container text-center">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-text">
                        <h1 class="name">Shorten really long URLs</h1>
                        <p>Shorten massive long URLs in a similar fashion to the zillion other URL shortening services out there.</p>

                        <form role="form" method="post" action="/">
                            <div class="row">
                                <div class="col-lg-2"></div>
                                <div class="col-lg-8">
                                    <label class="sr-only" for="url">Url</label>
                                    <div class="input-group">
                                        {{ form_widget(form.short_url, {attr: {class: "form-control input-lg", placeholder: 'Enter really long URL'|trans }}) }}
                                        <span class="input-group-btn">
                                            <button class="btn btn-primary btn-lg" type="submit">Shorten</button>
                                        </span>
                                    </div>
                                    {{ form_rest(form) }}
                                </div>
                                <div class="col-lg-2"></div>
                            </div>
                        </form>

                        <!--
                        {#{% for alert in app.session.flashbag.get('example') %}#}
                        {#<div class="error-message">#}
                          {#<div class="alert"><strong>{{ alert }}</strong></div>#}
                        {#</div>#}
                        {#{% endfor %}#}
                        -->
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block body_content %}
    {% include 'default/about.html.twig' %}
{% endblock %}


